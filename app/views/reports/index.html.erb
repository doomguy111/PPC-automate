<%= breadcrumbs_helper([
  { text: 'Dashboard', path: root_path },
  { text: ' Reports', path: reports_path }
]) %>

<div class="row">
  <div class="col-md-12">
      <%= link_to 'Upload Report', new_report_path, class: 'btn btn-sm btn-success' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Period</th>
          <th>Imported</th>
        </tr>
      </thead>
      <tbody>
        <%= render @reports %>
      </tbody>
    </table>
  </div>
</div>
