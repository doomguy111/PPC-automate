<%= breadcrumbs_helper([
  { text: 'Dashboard', path: root_path },
  { text: 'Campaigns', path: campaigns_path },
  { text: @campaign.name, path: nil }
]) %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @campaign.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-primary o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fas fa-fw fa-comments"></i>
        </div>
        <div class="mr-5"><%= number_with_delimiter(@aggregate_stats.impressions) %> Impressions</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Details</span>
        <span class="float-right">
          <i class="fas fa-angle-right"></i>
        </span>
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-warning o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fas fa-fw fa-list"></i>
        </div>
        <div class="mr-5"><%= @aggregate_stats.clicks %> Clicks</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Details</span>
        <span class="float-right">
          <i class="fas fa-angle-right"></i>
        </span>
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-success o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fas fa-fw fa-shopping-cart"></i>
        </div>
        <div class="mr-5"><%= number_to_currency(@aggregate_stats.spend / 100.0) %> Spend</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Details</span>
        <span class="float-right">
          <i class="fas fa-angle-right"></i>
        </span>
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-danger o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fas fa-fw fa-life-ring"></i>
        </div>
        <div class="mr-5"><%= number_to_currency(@aggregate_stats.sales / 100.0) %> Sales</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Details</span>
        <span class="float-right">
          <i class="fas fa-angle-right"></i>
        </span>
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        Campaign
        <%= link_to 'Edit', edit_campaign_path(@campaign) %>
      </div>
      <div class="card-body">
        <p><strong>Name:</strong> <%= @campaign.name %></p>
        <p><strong>Targeting Type:</strong> <%= @campaign.targeting_type %></p>
        <p><strong>Status:</strong> <%= @campaign.status %></p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Ad Groups</h3>
  </div>
</div>

<div class="row">
  <% @ad_groups.each do |ad_group| %>
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <%= link_to ad_group.name, ad_group %>
        </div>
      </div>
    </div>
  <% end %>
</div>
