<%= breadcrumbs_helper([
  { text: 'Dashboard', path: root_path },
  { text: 'SKUs', path: skus_path }
]) %>

<div class="row">
  <div class="col-md-12">
      <%= link_to 'New Sku', new_sku_path, class: 'btn btn-sm btn-success' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
      <thead>
        <tr>
          <th>Name</th>
          <th>Asin</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'sku', collection: @skus %>
      </tbody>
    </table>
  </div>
</div>
